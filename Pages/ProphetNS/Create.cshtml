@page
@model MyScriptureJournal.Pages.ProphetNS.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Prophets</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Prophets.LastName" class="control-label"></label>
                <input asp-for="Prophets.LastName" class="form-control" />
                <span asp-validation-for="Prophets.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prophets.FirstMidName" class="control-label"></label>
                <input asp-for="Prophets.FirstMidName" class="form-control" />
                <span asp-validation-for="Prophets.FirstMidName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Prophets.DispDate" class="control-label"></label>
                <input asp-for="Prophets.DispDate" class="form-control" />
                <span asp-validation-for="Prophets.DispDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Prophets.priestHoodOffice.priesthoodOffice" class="control-label"></label>
                <input asp-for="Prophets.priestHoodOffice.priesthoodOffice" class="form-control" />
                <span asp-validation-for="Prophets.priestHoodOffice.priesthoodOffice" class="text-danger" />
            </div>

            <div class="form-group">
                <div class="table">
                    <table>
                        <tr>
                            @{
                                int cnt = 0;

                                foreach (var reference in Model.AssignedReferenceDataList)
                                {
                                    if (cnt++ % 3 == 0)
                                    {
                                    @:</tr><tr>
                                    }
                                    @:<td>
                                        <input type="checkbox"
                                               name="selectedReferences"
                                               value="@reference.ReferenceID"
                                               @(Html.Raw(reference.Assigned ? "checked=\"checked\"" : "")) />
                                        @reference.ReferenceID @:  @reference.Title
                                    @:</td>
                                }
                            @:</tr>
                            }
                    </table>
                </div>
            </div>
            <div class="form-group">
                 <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

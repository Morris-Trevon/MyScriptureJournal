@page
@model MyScriptureJournal.Pages.References.CreateModel

@{
    ViewData["Title"] = "Create Reference";
}

<h1>Create</h1>

<h4>Reference</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Reference.ReferenceID" class="control-label"></label>
                <input asp-for="Reference.ReferenceID" class="form-control" />
                <span asp-validation-for="Reference.ReferenceID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reference.Title" class="control-label"></label>
                <input asp-for="Reference.Title" class="form-control" />
                <span asp-validation-for="Reference.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reference.ChapterAndVerse" class="control-label"></label>
                <input asp-for="Reference.ChapterAndVerse" class="form-control" />
                <span asp-validation-for="Reference.ChapterAndVerse" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reference.SpiritualNotes" class="control-label"></label>
                <input asp-for="Reference.SpiritualNotes" class="form-control" />
                <span asp-validation-for="Reference.SpiritualNotes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reference.City" class="control-label"></label>
                <select asp-for="Reference.CityId" class="form-control"
                        asp-items="@Model.CityNameSL">
                    <option value="">-- Select City --</option>
                </select>
                <span asp-validation-for="Reference.CityId" class="text-danger" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
